modules = ["python-3.11", "postgresql-16"]

[build]
system = "uvicorn[standard]"
command = "uvicorn main:app --host 0.0.0.0 --port $PORT"

[deploy]
run = "python3 main.py"
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["cargo", "glibcLocales", "libiconv", "libxcrypt", "openssl", "pkg-config", "postgresql", "postgresql_15", "rustc"]

[deployment]
run = ["python3", "main.py"]
deploymentTarget = "vm"

[env]
PYTHONPATH = "$PYTHONPATH:."
# Database configuration for Replit (SQLite by default)
DATABASE_URL = "sqlite:///cryptosatx.db"
# Enable all features
ENABLE_MSS = "true"
ENABLE_DATABASE = "true"
ENABLE_TELEGRAM = "true"
ENABLE_OPENAI = "true"
# Replit specific settings
REPLIT_ENVIRONMENT = "production"
PORT = "8000"

[workflows]
runButton = "CryptoSatX Enhanced"

[[workflows.workflow]]
name = "CryptoSatX Enhanced"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "api-server"

[[workflows.workflow]]
name = "api-server"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PORT=$PORT python3 main.py"
waitForPort = 8000

[agent]
expertMode = true
integrations = ["python_database:1.0.0"]

[[ports]]
localPort = 8000
externalPort = 80

[[ports]]
localPort = 40719
externalPort = 3000

